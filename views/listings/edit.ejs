
<%layout("/layouts/boilerplate")-%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%=listing.id%>/?_method=PUT"  novalidate class="needs-validation">
        <div class="mb-3">
             <label for="title" class="form-label">Title</label>
        <input required type="text" value="<%=listing.title%>" name="listing[title]" class="form-control">
      <div class="valid-feedback">Title looks good.</div>
        </div>
        <div class="mb-3">
             <label for="Description" class="form-label">Description</label>
       <textarea required name="listing[description]" id="description" type="text" class="form-control"><%=listing.description%></textarea>
       <div class="valid-feedback">A short Description</div>
  </div>
      </div>
       <!-- <div class="mb-3">
         <label for="image" class="form-label">Image Listing</label>
       <input  id="image"   class="form-control" type="text" value="<%=listing.image%>" name="listing[image][]">
      </div> -->
       <!-- <div class="mb-3">
         <label for="image" class="form-label">Image Listing</label>
       <input  id="image"   class="form-control" type="text" value="<%=listing.image%>" name="listing[image]">
      </div> -->

      <div class="mb-3">

         <label for="image" class="form-label">Image Listing</label>
       <input  required id="image"   class="form-control" type="text" value="<%=listing.image.url%>" name="listing[image][url]">
<div class="invalid-feedback">URL must be specfied.</div>
      </div>
      <div class="row">
       <div class="mb-3 col-md-4">
         <label for="price" class="form-label">Price</label>
       <input required id="price" class="form-control" type="number" value="<%=listing.price%>" name="listing[price]">
       <div class="invalid-feedback">please enter a valid price</div>
       </div>
       <div class="mb-3 col-md-8">
         <label for="country" class="form-label">Country</label>
       <input  required class="form-control" type="text" name="listing[country]" id="country" value="<%=listing.country%>">
       <div class="invalid-feedback">Country should be valid.</div>
      </div>
      </div>
       <div class="mb-3">
         <label for="location" class="form-label">Location</label>
       <input required class="form-control"  type="text" name="listing[location]" id="location" value="<%=listing.location%>">
       <div class="invalid-feedback">Location should be valid.</div>
       </div>
       <button class="btn btn-dark edit-btn mt-3 ">EDIT</button>
       </form>
    <script src="/js/script.js"></script>
    </div>
       
    </div>
       
  </body>
